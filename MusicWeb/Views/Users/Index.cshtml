@model MusicWeb.Models.Account

@{
    ViewBag.Title = "Đăng Nhập";
    Layout = "~/Views/Shared/UserLayout.cshtml";
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Content/bootstrap5/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/UserStyle.css" rel="stylesheet" />
}


<style>
    .field-validation-error {
        color: red;
    }

    #div-ds {
        text-align: center;
        height: 50px;
        border-radius: 20px 20px 0 0;
    }
</style>
@*<div id="div-ds">
    <h2 sytle="padding-top:10px;color:white">Đăng nhập tài khoản</h2>
</div>*@


@using (Html.BeginForm("LoginAccount", "Users"))
{
    @Html.AntiForgeryToken()

    <div class="editTb">
        <div id="div-ds">
            <h2 sytle="padding-top:10px;color:white">Đăng nhập tài khoản</h2>
        </div>
        <table>

            <tr>
                <td>@Html.LabelFor(model => model.AccountID)</td>
                <td>@Html.TextBoxFor(model => model.AccountID, new { style = "field-validation-error" })</td>
                <td>@Html.ValidationMessageFor(model => model.AccountID)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.Email)</td>
                <td>@Html.TextBoxFor(model => model.Email, new { style = "field-validation-error" })</td>
                <td>@Html.ValidationMessageFor(model => model.Email)</td>
                @if (ViewBag.ErrorInfo != null)
                {
                    @ViewBag.ErrorInfo
                }

            </tr>
            <tr>
                <td>@Html.LabelFor(model => model.PasswordAccount)</td>
                <td>@Html.PasswordFor(model => model.PasswordAccount)</td>
                <td>@Html.ValidationMessageFor(model => model.PasswordAccount)</td>
            </tr>
            <tr>
                <td> </td>
                <td><input type="submit" value="Login" class="btn btn-success" /></td>
            </tr>
        </table>
        <a href="/Users/Dangkitk" class="btn btn-success" >Đăng Ký Tài Khoản</a>
    </div>

    

}

